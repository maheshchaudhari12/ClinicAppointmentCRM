@using ClinicAppointmentCRM.Models.ViewModels
<!-- Views/PatientManagement/Index.cshtml -->
@model List<PatientViewModel>
@{
    Layout = "_PatientLayout";
    ViewData["Title"] = "Patient Management";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-users"></i> Patient Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Patients</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Patient
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        </div>
    }

    <!-- Search and Filter -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-10">
                        <input type="text"
                               name="searchTerm"
                               value="@ViewBag.SearchTerm"
                               class="form-control"
                               placeholder="Search by name, email, phone, or username...">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Patients Table -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Patients (@Model.Count)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Age/Gender</th>
                                <th>Appointments</th>
                                <th>Status</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model)
                            {
                                <tr class="@(!patient.IsActive ? "table-secondary" : "")">
                                    <td>@patient.PatientId</td>
                                    <td>
                                        <strong>@patient.FullName</strong><br>
                                        <small class="text-muted">@@patient.Username</small>
                                    </td>
                                    <td>@patient.Email</td>
                                    <td>@patient.Phone</td>
                                    <td>
                                        @patient.Age years<br>
                                        <small class="text-muted">@patient.Gender</small>
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@patient.TotalAppointments</span>
                                    </td>
                                    <td>
                                        @if (patient.IsActive)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check-circle"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">
                                                <i class="fas fa-times-circle"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (patient.LastLogin.HasValue)
                                        {
                                            @patient.LastLogin.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details"
                                               asp-route-id="@patient.PatientId"
                                               class="btn btn-sm btn-info"
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-route-id="@patient.PatientId"
                                               class="btn btn-sm btn-warning"
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-sm btn-@(patient.IsActive ? "secondary" : "success")"
                                                    onclick="toggleStatus(@patient.UserId, '@patient.FullName')"
                                                    title="@(patient.IsActive ? "Deactivate" : "Activate")">
                                                <i class="fas fa-@(patient.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No patients found</h5>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <p>Try a different search term or <a asp-action="Index">view all patients</a></p>
                    }
                    else
                    {
                        <a asp-action="Create" class="btn btn-primary mt-3">
                            <i class="fas fa-plus"></i> Add Your First Patient
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

