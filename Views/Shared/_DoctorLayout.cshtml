@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic CRM Doctor Portal</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom Doctor Styles -->
    <link rel="stylesheet" href="~/css/doctor.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar sidebar-doctor">
            <div class="sidebar-header">
                <a asp-controller="Doctor" asp-action="Dashboard" class="sidebar-brand">
                    <i class="fas fa-stethoscope"></i>
                    <span>Doctor Portal</span>
                </a>
                <button type="button" id="sidebarCollapse" class="btn btn-sm">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <!-- Doctor Profile -->
            <div class="sidebar-user">
                <div class="user-info">
                    <div class="user-avatar doctor-avatar">
                        @{
                            var username = User.Identity.Name ?? "Doctor";
                            var initial = username.Substring(0, 1).ToUpper();
                        }
                        <span>@initial</span>
                    </div>
                    <div class="user-details">
                        <h6>Dr. @username</h6>
                        <small>@(HttpContextAccessor.HttpContext?.Session.GetString("Specialization") ?? "General Physician")</small>
                    </div>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <a asp-controller="Doctor" asp-action="Dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Appointments -->
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "DoctorAppointments" ? "active" : "")">
                    <a href="#appointmentSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-calendar-check"></i>
                        <span>Appointments</span>
                        <span class="badge badge-warning ml-auto">5</span>
                    </a>
                    <ul class="collapse list-unstyled" id="appointmentSubmenu">
                        <li>
                            <a asp-controller="DoctorAppointments" asp-action="Today">
                                <i class="fas fa-calendar-day"></i> Today's Appointments
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DoctorAppointments" asp-action="Upcoming">
                                <i class="fas fa-calendar-plus"></i> Upcoming
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DoctorAppointments" asp-action="History">
                                <i class="fas fa-history"></i> History
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DoctorAppointments" asp-action="Pending">
                                <i class="fas fa-clock"></i> Pending Requests
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Patients -->
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "DoctorPatients" ? "active" : "")">
                    <a href="#patientSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-users"></i>
                        <span>My Patients</span>
                    </a>
                    <ul class="collapse list-unstyled" id="patientSubmenu">
                        <li>
                            <a asp-controller="DoctorPatients" asp-action="Index">
                                <i class="fas fa-list"></i> All Patients
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DoctorPatients" asp-action="Recent">
                                <i class="fas fa-clock"></i> Recent Patients
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DoctorPatients" asp-action="Search">
                                <i class="fas fa-search"></i> Search Patient
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Prescriptions -->
                <li>
                    <a href="#prescriptionSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-prescription"></i>
                        <span>Prescriptions</span>
                    </a>
                    <ul class="collapse list-unstyled" id="prescriptionSubmenu">
                        <li>
                            <a asp-controller="DoctorPrescriptions" asp-action="Index">
                                <i class="fas fa-list"></i> All Prescriptions
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DoctorPrescriptions" asp-action="Create">
                                <i class="fas fa-plus"></i> New Prescription
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Schedule -->
                <li>
                    <a asp-controller="Doctor" asp-action="Schedule">
                        <i class="fas fa-calendar-week"></i>
                        <span>My Schedule</span>
                    </a>
                </li>

                <!-- Medical Records -->
                <li>
                    <a asp-controller="DoctorRecords" asp-action="Index">
                        <i class="fas fa-file-medical"></i>
                        <span>Medical Records</span>
                    </a>
                </li>

                <!-- Divider -->
                <li class="sidebar-divider"></li>

                <!-- Reports -->
                <li>
                    <a href="#reportsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-chart-line"></i>
                        <span>Reports</span>
                    </a>
                    <ul class="collapse list-unstyled" id="reportsSubmenu">
                        <li>
                            <a href="#">
                                <i class="fas fa-chart-bar"></i> Patient Statistics
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-calendar-check"></i> Appointment Reports
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Profile & Settings -->
                <li>
                    <a asp-controller="Doctor" asp-action="Profile">
                        <i class="fas fa-user-circle"></i>
                        <span>My Profile</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Doctor" asp-action="Settings">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                </li>

                <!-- Logout -->
                <li>
                    <a href="#" onclick="document.getElementById('logoutForm').submit(); return false;">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation Bar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white top-navbar">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapseTop" class="btn btn-light">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ml-auto d-flex align-items-center">
                        <!-- Quick Stats -->
                        <div class="quick-stats d-none d-lg-flex mr-4">
                            <div class="stat-item">
                                <i class="fas fa-calendar-day text-primary"></i>
                                <span class="ml-2">Today: <strong>12</strong></span>
                            </div>
                            <div class="stat-item ml-3">
                                <i class="fas fa-clock text-warning"></i>
                                <span class="ml-2">Pending: <strong>5</strong></span>
                            </div>
                        </div>

                        <!-- Notifications -->
                        <div class="dropdown mr-3">
                            <button class="btn btn-light position-relative" type="button" id="notificationDropdown" data-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="badge badge-danger notification-badge">3</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right notification-dropdown">
                                <div class="dropdown-header">
                                    <strong>Notifications</strong>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item notification-item" href="#">
                                    <i class="fas fa-calendar text-primary"></i>
                                    <div>
                                        <strong>New Appointment</strong>
                                        <small class="text-muted">John Doe scheduled for 3:00 PM</small>
                                        <small class="text-muted d-block">5 mins ago</small>
                                    </div>
                                </a>
                                <a class="dropdown-item notification-item" href="#">
                                    <i class="fas fa-file-medical text-success"></i>
                                    <div>
                                        <strong>Test Results Ready</strong>
                                        <small class="text-muted">Patient ID: 1234</small>
                                        <small class="text-muted d-block">1 hour ago</small>
                                    </div>
                                </a>
                            </div>
                        </div>

                        <!-- User Menu -->
                        <div class="dropdown">
                            <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown">
                                <i class="fas fa-user-md"></i>
                                <span class="d-none d-md-inline">Dr. @User.Identity.Name</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <div class="dropdown-header">
                                    <strong>Dr. @User.Identity.Name</strong>
                                    <small class="text-muted d-block">Doctor</small>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Doctor" asp-action="Profile">
                                    <i class="fas fa-user"></i> My Profile
                                </a>
                                <a class="dropdown-item" asp-controller="Doctor" asp-action="Settings">
                                    <i class="fas fa-cog"></i> Settings
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="#" onclick="document.getElementById('logoutForm').submit(); return false;">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main role="main" class="main-content">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <p>&copy; @DateTime.Now.Year - Clinic Appointment CRM</p>
                        </div>
                        <div class="col-md-6 text-right">
                            <p>Doctor Portal v1.0</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Logout Form -->
    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>