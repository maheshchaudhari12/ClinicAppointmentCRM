<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic CRM Admin</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom Admin Styles -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <a asp-controller="Admin" asp-action="Index" class="sidebar-brand">
                    <i class="fas fa-clinic-medical"></i>
                    <span>Clinic CRM</span>
                </a>
                <button type="button" id="sidebarCollapse" class="btn btn-sm">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <!-- User Profile -->
            <div class="sidebar-user">
                <div class="user-info">
                    <div class="user-avatar">
                        @{
                            var username = User.Identity.Name ?? "Admin";
                            var initial = username.Substring(0, 1).ToUpper();
                        }
                        <span>@initial</span>
                    </div>
                    <div class="user-details">
                        <h6>@username</h6>
                        <small>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                    </div>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Index">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Patient Management -->
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "PatientManagement" ? "active" : "")">
                    <a href="#patientSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-users"></i>
                        <span>Patients</span>
                    </a>
                    <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "PatientManagement" ? "show" : "")" id="patientSubmenu">
                        <li>
                            <a asp-controller="PatientManagement" asp-action="Index">
                                <i class="fas fa-list"></i> All Patients
                            </a>
                        </li>
                        <li>
                            <a asp-controller="PatientManagement" asp-action="Create">
                                <i class="fas fa-plus"></i> Add New
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Doctor Management -->
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "DoctorManagement" ? "active" : "")">
                    <a href="#doctorSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-user-md"></i>
                        <span>Doctors</span>
                    </a>
                    <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "DoctorManagement" ? "show" : "")" id="doctorSubmenu">
                        <li>
                            <a asp-controller="DoctorManagement" asp-action="Index">
                                <i class="fas fa-list"></i> All Doctors
                            </a>
                        </li>
                        <li>
                            <a asp-controller="DoctorManagement" asp-action="Create">
                                <i class="fas fa-plus"></i> Add New
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Reception Management -->
                <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "ReceptionManagement" ? "active" : "")">
                    <a href="#receptionSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-user-tie"></i>
                        <span>Receptionists</span>
                    </a>
                    <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ReceptionManagement" ? "show" : "")" id="receptionSubmenu">
                        <li>
                            <a asp-controller="ReceptionManagement" asp-action="Index">
                                <i class="fas fa-list"></i> All Receptionists
                            </a>
                        </li>
                        <li>
                            <a asp-controller="ReceptionManagement" asp-action="Create">
                                <i class="fas fa-plus"></i> Add New
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Appointments -->
                <li>
                    <a href="#appointmentSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Appointments</span>
                    </a>
                    <ul class="collapse list-unstyled" id="appointmentSubmenu">
                        <li>
                            <a href="#">
                                <i class="fas fa-list"></i> All Appointments
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-calendar-plus"></i> Schedule New
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-clock"></i> Pending
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Reports -->
                <li>
                    <a href="#reportsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports</span>
                    </a>
                    <ul class="collapse list-unstyled" id="reportsSubmenu">
                        <li>
                            <a href="#">
                                <i class="fas fa-file-medical"></i> Patient Reports
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-calendar-check"></i> Appointment Reports
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-dollar-sign"></i> Revenue Reports
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Divider -->
                <li class="sidebar-divider"></li>

                <!-- Settings (SuperAdmin Only) -->
                @if (User.IsInRole("SuperAdmin"))
                {
                    <li>
                        <a href="#settingsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-cogs"></i>
                            <span>Settings</span>
                        </a>
                        <ul class="collapse list-unstyled" id="settingsSubmenu">
                            <li>
                                <a href="#">
                                    <i class="fas fa-users-cog"></i> User Management
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fas fa-building"></i> Clinic Settings
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fas fa-database"></i> Backup & Restore
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                <!-- Profile -->
                <li>
                    <a href="#">
                        <i class="fas fa-user-circle"></i>
                        <span>My Profile</span>
                    </a>
                </li>

                <!-- Logout -->
                <li>
                    <a href="#" onclick="document.getElementById('logoutForm').submit(); return false;">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation Bar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white top-navbar">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapseTop" class="btn btn-light">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ml-auto d-flex align-items-center">
                        <!-- Search -->
                        <form class="form-inline mr-3 d-none d-md-flex">
                            <div class="input-group">
                                <input type="text" class="form-control search-input" placeholder="Search...">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                        <!-- Notifications -->
                        <div class="dropdown mr-3">
                            <button class="btn btn-light position-relative" type="button" id="notificationDropdown" data-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="badge badge-danger notification-badge">3</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right notification-dropdown">
                                <div class="dropdown-header">
                                    <strong>Notifications</strong>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item notification-item" href="#">
                                    <i class="fas fa-user-plus text-success"></i>
                                    <div>
                                        <strong>New Patient</strong>
                                        <small class="text-muted">John Doe registered</small>
                                        <small class="text-muted d-block">2 mins ago</small>
                                    </div>
                                </a>
                                <a class="dropdown-item notification-item" href="#">
                                    <i class="fas fa-calendar text-primary"></i>
                                    <div>
                                        <strong>New Appointment</strong>
                                        <small class="text-muted">Scheduled for tomorrow</small>
                                        <small class="text-muted d-block">1 hour ago</small>
                                    </div>
                                </a>
                                <a class="dropdown-item notification-item" href="#">
                                    <i class="fas fa-exclamation-circle text-warning"></i>
                                    <div>
                                        <strong>Pending Approval</strong>
                                        <small class="text-muted">5 items need review</small>
                                        <small class="text-muted d-block">3 hours ago</small>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-center text-primary" href="#">
                                    <small>View All Notifications</small>
                                </a>
                            </div>
                        </div>

                        <!-- User Menu -->
                        <div class="dropdown">
                            <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                <span class="d-none d-md-inline">@User.Identity.Name</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <div class="dropdown-header">
                                    <strong>@User.Identity.Name</strong>
                                    <small class="text-muted d-block">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user"></i> My Profile
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cog"></i> Settings
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="#" onclick="document.getElementById('logoutForm').submit(); return false;">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main role="main" class="main-content">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <p>&copy; @DateTime.Now.Year - Clinic Appointment CRM. All rights reserved.</p>
                        </div>
                        <div class="col-md-6 text-right">
                            <p>
                                <a href="#">Privacy Policy</a> |
                                <a href="#">Terms of Service</a> |
                                <a href="#">Support</a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Logout Form -->
    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>

    <!-- Custom Admin Script -->
    <script src="~/js/admin.js" asp-append-version="true"></script>
</body>
</html>