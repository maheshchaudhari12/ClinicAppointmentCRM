@using ClinicAppointmentCRM.Models.ViewModels
@model DoctorViewModel
@{
    Layout = "_DoctorLayout";
    ViewData["Title"] = "Doctor Schedule";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-calendar-alt"></i> Doctor Schedule</h2>
            <p class="text-muted">Dr. @Model.Username - @Model.Specialization</p>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Details" asp-route-id="@Model.DoctorId" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Weekly Schedule</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Current Schedule:</strong>
                        @if (!string.IsNullOrEmpty(Model.AvailabilitySchedule))
                        {
                            @Model.AvailabilitySchedule
                        }
                        else
                        {
                            <span>Not set</span>
                        }
                    </div>

                    <!-- Calendar or Schedule view would go here -->
                    <div class="text-center p-5">
                        <i class="fas fa-calendar-week fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Calendar view coming soon...</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Schedule Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Doctor:</strong> Dr. @Model.Username</p>
                    <p><strong>Specialization:</strong> @Model.Specialization</p>
                    <p><strong>Total Appointments:</strong> @Model.TotalAppointments</p>
                </div>
            </div>
        </div>
    </div>
</div>