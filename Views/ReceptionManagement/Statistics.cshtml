@model Dictionary<string, int>
@{
    Layout = "_ReceptionLayout";
    ViewData["Title"] = "Receptionist Statistics";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-chart-bar"></i> Receptionist Statistics</h2>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card shadow border-left-primary">
                <div class="card-body">
                    <div class="text-center">
                        <h2 class="text-primary">@Model["Total"]</h2>
                        <p class="text-muted mb-0">Total Receptionists</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow border-left-success">
                <div class="card-body">
                    <div class="text-center">
                        <h2 class="text-success">@Model["Active"]</h2>
                        <p class="text-muted mb-0">Active</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow border-left-danger">
                <div class="card-body">
                    <div class="text-center">
                        <h2 class="text-danger">@Model["Inactive"]</h2>
                        <p class="text-muted mb-0">Inactive</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow border-left-info">
                <div class="card-body">
                    <div class="text-center">
                        <h2 class="text-info">@Model["TotalAppointmentsHandled"]</h2>
                        <p class="text-muted mb-0">Total Appointments</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>