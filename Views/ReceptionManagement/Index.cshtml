@using ClinicAppointmentCRM.Models.ViewModels
@model List<ReceptionViewModel>
@{
    Layout = "_ReceptionLayout";
    ViewData["Title"] = "Reception Management";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-user-tie"></i> Reception Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Receptionists</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" class="btn btn-info">
                <i class="fas fa-plus"></i> Add New Receptionist
            </a>
            <a asp-action="Statistics" class="btn btn-secondary">
                <i class="fas fa-chart-bar"></i> Statistics
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        </div>
    }

    <!-- Search and Filter -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-10">
                        <input type="text"
                               name="searchTerm"
                               value="@ViewBag.SearchTerm"
                               class="form-control"
                               placeholder="Search by name, email, phone, or username...">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-info btn-block">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Receptionists Table -->
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">All Receptionists (@Model.Count)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Appointments Handled</th>
                                <th>Status</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reception in Model)
                            {
                                <tr class="@(!reception.IsActive ? "table-secondary" : "")">
                                    <td>@reception.ReceptionId</td>
                                    <td><strong>@reception.FullName</strong></td>
                                    <td>
                                        <small class="text-muted">@@reception.Username</small>
                                    </td>
                                    <td>@reception.Email</td>
                                    <td>@reception.Phone</td>
                                    <td>
                                        <span class="badge badge-info badge-pill">
                                            @reception.TotalAppointmentsHandled
                                        </span>
                                    </td>
                                    <td>
                                        @if (reception.IsActive)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check-circle"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">
                                                <i class="fas fa-times-circle"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (reception.LastLogin.HasValue)
                                        {
                                            @reception.LastLogin.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details"
                                               asp-route-id="@reception.ReceptionId"
                                               class="btn btn-sm btn-info"
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-route-id="@reception.ReceptionId"
                                               class="btn btn-sm btn-warning"
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-sm btn-@(reception.IsActive ? "secondary" : "success")"
                                                    onclick="toggleStatus(@reception.UserId, '@reception.FullName')"
                                                    title="@(reception.IsActive ? "Deactivate" : "Activate")">
                                                <i class="fas fa-@(reception.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No receptionists found</h5>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <p>Try a different search term or <a asp-action="Index">view all receptionists</a></p>
                    }
                    else
                    {
                        <a asp-action="Create" class="btn btn-info mt-3">
                            <i class="fas fa-plus"></i> Add Your First Receptionist
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Toggle Status Form (Hidden) -->
<form id="toggleStatusForm" asp-action="ToggleStatus" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="userId" id="toggleUserId" />
</form>

@section Scripts {
    <script>
        function toggleStatus(userId, receptionName) {
            if (confirm(`Are you sure you want to change the status of ${receptionName}?`)) {
                document.getElementById('toggleUserId').value = userId;
                document.getElementById('toggleStatusForm').submit();
            }
        }
    </script>
}