@model ClinicAppointmentCRM.Models.ViewModels.AdminDashboardViewModel
<!-- Views/Admin/Index.cshtml -->
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-tachometer-alt"></i> Admin Dashboard
            </h2>
            <p class="text-muted">Welcome, @User.Identity.Name</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Patients</h6>
                            <h2 class="mb-0">@Model.ActivePatients</h2>
                            <small>of @Model.TotalPatients total</small>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="PatientManagement" asp-action="Index" class="text-white">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Doctors</h6>
                            <h2 class="mb-0">@Model.ActiveDoctors</h2>
                            <small>of @Model.TotalDoctors total</small>
                        </div>
                        <i class="fas fa-user-md fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="DoctorManagement" asp-action="Index" class="text-white">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Receptionists</h6>
                            <h2 class="mb-0">@Model.ActiveReceptionists</h2>
                            <small>of @Model.TotalReceptionists total</small>
                        </div>
                        <i class="fas fa-user-tie fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="ReceptionManagement" asp-action="Index" class="text-white">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Today</h6>
                            <h2 class="mb-0">@Model.TodayAppointments</h2>
                            <small>@Model.PendingAppointments pending</small>
                        </div>
                        <i class="fas fa-calendar-check fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="#" class="text-white">
                        View All <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <a asp-controller="PatientManagement" asp-action="Create" class="btn btn-primary btn-block btn-lg">
                                <i class="fas fa-user-plus"></i> Add New Patient
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a asp-controller="DoctorManagement" asp-action="Create" class="btn btn-success btn-block btn-lg">
                                <i class="fas fa-user-md"></i> Add New Doctor
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a asp-controller="ReceptionManagement" asp-action="Create" class="btn btn-info btn-block btn-lg">
                                <i class="fas fa-user-tie"></i> Add New Receptionist
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Data -->
    <div class="row">
        <!-- Recent Patients -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users"></i> Recent Patients</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentPatients?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model.RecentPatients)
                                    {
                                        <tr>
                                            <td>@patient.FullName</td>
                                            <td>@patient.Phone</td>
                                            <td>
                                                @if (patient.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="PatientManagement"
                                                   asp-action="Details"
                                                   asp-route-id="@patient.PatientId"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted p-3">No patients found</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="PatientManagement" asp-action="Index" class="btn btn-sm btn-primary">
                        View All Patients
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Doctors -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-user-md"></i> Recent Doctors</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentDoctors?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Username</th>
                                        <th>Specialization</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doctor in Model.RecentDoctors)
                                    {
                                        <tr>
                                            <td>@doctor.Username</td>
                                            <td>@doctor.Specialization</td>
                                            <td>
                                                @if (doctor.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="DoctorManagement"
                                                   asp-action="Details"
                                                   asp-route-id="@doctor.DoctorId"
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted p-3">No doctors found</p>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="DoctorManagement" asp-action="Index" class="btn btn-sm btn-success">
                        View All Doctors
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .opacity-50 {
            opacity: 0.5;
        }

        .card {
            border-radius: 10px;
        }

        .btn-block {
            display: block;
            width: 100%;
        }
    </style>
